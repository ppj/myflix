%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in', method: 'post' do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            =label_tag :email, "Email Address"
            .row
              .col-sm-4
                =email_field_tag :email, nil, class: 'form-control'
          .form-group
            =label_tag :password
            .row
              .col-sm-4
                =password_field_tag :password, nil, class: 'form-control'
          .form-group
            =link_to "Don't Remember Your Password?", forgot_password_path
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
