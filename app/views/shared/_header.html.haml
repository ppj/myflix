%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", home_path
  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", following_path
    = form_tag(search_videos_path, class: "col-md-5 navbar-form", method: "GET") do
      .form-group
        %input.form-control(type="text" placeholder="Search for videos here" name="search_string")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.fullname}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              =link_to "Sign Out", sign_out_path, method: :delete
