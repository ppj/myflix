%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, control_col: 'col-sm-6') do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field    :email, label: 'Email Address'
          = f.password_field :password
          = f.text_field     :fullname, label: 'Full Name'
          = hidden_field_tag :invitation_token, params[:token]
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISHABLE_KEY']}" data-name="MyFlix PJ" data-description="Sign Up" data-currency="aud" data-amount="999" data-locale="auto" data-panel-label="Pay AU$ 9.99 & Sign Up" data-label="Pay AU$ 9.99 & Sign Up")
